<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:background="#e0fcf2"
        android:gravity="center">

        <ImageView
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:src="@drawable/smart_campus_logo"
            android:contentDescription="@string/app_logo"/>
    </LinearLayout>

    <!-- TITLE BAR -->
    <TextView
        android:id="@+id/tv_event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:background="@drawable/menu_background_gradient"
        android:gravity="center"
        android:padding="12dp"
        android:text="EVENT SCHEDULER"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- CALENDAR -->
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_event_title"
        android:layout_margin="12dp"
        app:mcv_selectionColor="#3c7962"
        app:mcv_showOtherDates="all"/>

    <!-- EMPTY STATE -->
    <TextView
        android:id="@+id/tv_empty_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarView"
        android:gravity="center"
        android:padding="16dp"
        android:text="No events for this day"
        android:textColor="#777777"
        android:visibility="gone"/>

    <!-- EVENT LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/calendarView"
        android:padding="12dp"/>

    <!-- ADD EVENT BUTTON -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="#3c7962"
        app:tint="@android:color/white"/>

</RelativeLayout>
