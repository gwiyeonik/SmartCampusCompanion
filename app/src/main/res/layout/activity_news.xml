<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsActivity">

    <!-- Scrollable Content Area -->
    <ScrollView
        android:id="@+id/content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:background="#FAFAFA"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Header and Menu sections remain the same -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:background="#e0fcf2"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="280dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/app_logo"
                    android:src="@drawable/smart_campus_logo" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_background_gradient"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="24dp">
                <!-- Academic -->
                <LinearLayout
                    android:id="@+id/btn_academic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_academic" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="ACADEMIC"
                        android:textColor="#0d522c"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <!-- Club -->
                <LinearLayout
                    android:id="@+id/btn_club"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_club" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="CLUB"
                        android:textColor="#0d522c"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <!-- Event -->
                <LinearLayout
                    android:id="@+id/btn_event"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_event" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="EVENT"
                        android:textColor="#0d522c"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Happening Section -->
            <TextView
                android:id="@+id/tv_happening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="HAPPENING"
                android:textColor="#1B5E20"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- *** REPLACED WITH RECYCLERVIEW *** -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_happening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_horizontal_event" />

            <!-- This Week Section -->
            <TextView
                android:id="@+id/tv_this_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="THIS WEEK"
                android:textColor="#1B5E20"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- *** REPLACED WITH RECYCLERVIEW *** -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_this_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_horizontal_event" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#3c7962"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>
