<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- HEADER -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#e0fcf2">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/iv_back_update"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_margin="12dp"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back" />

        <!-- Logo -->
        <ImageView
            android:layout_width="260dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:src="@drawable/smart_campus_logo" />
    </RelativeLayout>

    <!-- TITLE BAR -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:background="@drawable/menu_background_gradient"
        android:gravity="center"
        android:padding="12dp"
        android:text="MY TIMETABLE"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- CALENDAR -->
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        app:mcv_selectionColor="#3c7962"
        app:mcv_showOtherDates="all" />

    <!-- EMPTY STATE -->
    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarView"
        android:gravity="center"
        android:padding="24dp"
        android:text="No classes for this day"
        android:textColor="#777777"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- TIMETABLE LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_timetable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarView"
        android:layout_above="@id/btn_add_timetable"
        android:padding="12dp" />

    <!-- ADD BUTTON -->
    <Button
        android:id="@+id/btn_add_timetable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:backgroundTint="#3c7962"
        android:text="Add Timetable"
        android:textColor="@android:color/white" />

</RelativeLayout>
